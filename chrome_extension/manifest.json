{
    "manifest_version": 3,
    "name": "LiteWebAgent Controller",
    "version": "1.0",
    "description": "Control LiteWebAgent web automation",
    "permissions": [
      "activeTab",
      "tabs",
      "alarms"
    ],
    "background": {
      "service_worker": "service_worker.js"
    },
    "host_permissions": [
      "http://localhost:5001/*",
      "http://127.0.0.1:5001/*"
    ],
    "action": {
      "default_popup": "popup/popup.html"
    }
}
